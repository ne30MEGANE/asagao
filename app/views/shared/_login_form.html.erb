<h2>ログイン</h2>
<% if flash.alert %><p class="alert"><%= flash.alert %></p><% end %>
<%= form_tag :session, id: "login_form" do %>
	<div>
	  <input class="textbox" type="text" name="name" placeholder="ユーザー名">
	</div>
	<div>
	  <input class="textbox" type="password" name="password" placeholder="パスワード">
	</div>
	<div>
	  <input class="kit-button silver" type="submit" value="ログイン">
	</div>
<% end %>	
